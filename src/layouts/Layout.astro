---
import "@fontsource/ibm-plex-mono";
import "sanitize.css";

import { Content as FooterContent } from "../components/footer.md";
import NavBar from "../components/NavBar";

import "../styles/container.scss";
import "../styles/theme.scss";
import "../styles/typography.scss";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#fbb023" />
        <meta name="msapplication-TileColor" content="#fbb023" />
        <meta name="theme-color" content="#fbb023" />
    </head>
    <body>
        <div class="safari-overflow-trickery">
            <div class="container">
                <header>
                    <NavBar client:load path={Astro.url.pathname} />
                </header>

                <main>
                    <slot />
                </main>

                <footer>
                    <FooterContent />
                </footer>
            </div>
        </div>
    </body>
</html>

<style lang="scss">
    .safari-overflow-trickery {
        overflow-x: hidden;
    }

    $dividing-line: 0.25rem solid var(--primary9);

    header,
    footer {
        margin-left: -100vw;
        margin-right: -100vw;
        padding-left: 100vw;
        padding-right: 100vw;
    }

    header {
        background-color: var(--primary3);
        border-bottom: $dividing-line;

        transition: background-color var(--transition);
    }

    footer {
        --typography-spacing-vertical: 0.75rem;

        border-top: $dividing-line;
        padding-top: var(--typography-spacing-vertical);
    }
</style>

<script>
    let htmlClasses = document.documentElement.classList;

    const prefersDarkMode = window.matchMedia("(prefers-color-scheme: dark)");

    if (prefersDarkMode.matches) {
        htmlClasses.add("dark-theme");
    }

    import { siteTheme } from "../stores/theme";
    siteTheme.subscribe((newValue) => {
        if (newValue === "dark") {
            htmlClasses.add("dark-theme");
        } else if (newValue === "light") {
            htmlClasses.remove("dark-theme");
        }
    });

    ///

    addEventListener("load", () => htmlClasses.add("transitions-ready"));
</script>
